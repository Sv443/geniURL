{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "lib": [
      "ES5",
      "ES6",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./out/",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": true,
    "noImplicitThis": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@src/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@www/*": ["www/*"],
      "@root/*": ["*"],
    }
  },
  "ts-node": {
    "esm": true,
    "preferTsExts": true,
  },
  "include": [
    "src/**/*",
    "www/**/*",
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/dev/**/*",
  ],
}
